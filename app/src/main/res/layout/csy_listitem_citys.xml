<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">    
    
    <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/csy_btn_h"
		android:paddingLeft="@dimen/csy_mg"
    	android:paddingRight="@dimen/csy_mg" 
	    android:background="@drawable/csy_listitem_citys" >
	
	    <TextView
	        android:id="@+id/txt_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:gravity="center_vertical"
	        android:textColor="@color/csy_text"
	        android:textSize="@dimen/csy_text_ts" />   
	
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/csy_arr_right" />
	
	</RelativeLayout>

</LinearLayout>